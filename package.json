{
  "name": "fullstack-docker-pern-backend",
  "version": "1.1.2",
  "description": "Submodule for the backend of the fullstack-docker-pern project",
  "keywords": [
    "fullstack",
    "docker",
    "postgres",
    "express",
    "react",
    "nginx",
    "typescript",
    "vite"
  ],
  "main": "index.ts",
  "scripts": {
    "tsc": "tsc",
    "dev": "ts-node-dev index.ts",
    "lint": "eslint --ext .ts .",
    "start": "node build/index.js",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --forceExit --detectOpenHandles",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "rollback": "ts-node-dev db/util/rollback.ts",
    "rollforward": "ts-node-dev db/util/rollforward.ts",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml build",
    "docker:dev:build:nc": "npm run docker:dev:build -- --no-cache",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down --remove-orphans",
    "docker:dev:ps": "docker compose -f docker-compose.dev.yml ps -a",
    "docker:dev:debug": "docker compose -f docker-compose.dev.yml run --rm dev.debug-helper wget -O - http://dev.backend:4000",
    "docker:dev:test": "docker exec -it dev.backend npm run test",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production'){process.exit(1)} \" || husky install",
    "pre-commit": "npx lint-staged && npm run tsc",
    "pre-push": "npm run docker:dev:test"
  },
  "author": "Anthony Collins",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.3.1",
    "@types/umzug": "^2.3.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.1",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@types/supertest": "^2.0.12",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.0",
    "latest-version": "^7.0.0",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "retry-as-promised": "^7.0.4",
    "sequelize": "^6.32.1",
    "umzug": "^3.2.1",
    "uuid": "^9.0.0"
  }
}
