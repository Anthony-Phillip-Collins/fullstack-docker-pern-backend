{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./build/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "include": ["src/**/*", "index.ts", "@types", "db/**/*.ts", "__tests__"],
  "exclude": ["node_modules", "docker-entrypoint-initdb.d", "build"]
}
